// C++

#include <iostream>
using namespace std;

int main() {
	int A, B, C, D, E; cin >> A >> B >> C >> D >> E;

	int time = 0;
	if (A < 0) {
		time += ((0 - A) * C);
		time += D;
		time += (B * E);
	}
	else time += ((B - A) * E);

	cout << time << endl;
}




// Python

A = int(input())
B = int(input())
C = int(input())
D = int(input())
E = int(input())

time = 0
if A < 0:
    time += ((0 - A) * C)
    time += D
    time += (B * E)
else:
    time += ((B - A) * E)
    
print(time)
